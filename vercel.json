{
  "version": 2,
  "builds": [
    {
      "src": "cpaie_frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
  "src": "cpaie_backend/package.json",
  "use": "@vercel/node",
  "config": {
    "includeFiles": ["src/**", "package.json", "tsconfig.json"]
  }
}
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "cpaie_backend/dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "cpaie_frontend/$1"
    }
  ]
}
